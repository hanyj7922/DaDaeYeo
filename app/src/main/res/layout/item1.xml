<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data class="Item1DataBinding">
        <variable
            name="product"
            type="com.hanyj96.dadaeyeo.data.Product" />
        <variable
            name="onItem1ClickListener"
            type="com.hanyj96.dadaeyeo.presentation.main.home.HomeItemAdapter.OnItemType1ClickListener" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item1_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="ITEM TITLE"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item1_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITEM PRICE"
                android:textColor="#7CB1F3"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>